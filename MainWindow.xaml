<Window x:Class="RitualService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RitualService.UI.Components"
        Title="Ritual Service" Height="800" Width="1440">
    <Window.Background>
        <LinearGradientBrush>
            <GradientStop Color="#2C2C2C" Offset="0.0" />
            <GradientStop Color="#7A7A7A" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>
    <DockPanel>
        <local:HeaderComponent DockPanel.Dock="Top" />
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
